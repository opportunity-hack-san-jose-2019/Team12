<div style="background-color: #5f6267;";>
  <div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Interviewer check-in</div>
      <div class="card-body">
        <%= form_with(url: "/interviewer_checkin") do %>
          <div class="form-group">
            <div class="form-label-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, "", class: "form-control", placeholder: "Email address"  %>
            </div>

            <div class="form-label-group">
              <%= label_tag :register_code %>
              <%= text_field_tag :register_code, "", class: "form-control", placeholder: "Registration Code"  %>
            </div>
          </div>

          <div class="actions">
            <%= submit_tag "Check in", class: "btn btn-primary btn-block", style: "background-color: #EB3B46; border-color: #EB3B46" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
